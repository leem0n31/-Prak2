<Window x:Class="WpfApp1.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Главное окно" Height="400" Width="800">
    <Grid>
        <TextBlock Text="Добрый день! Выберите задание:" 
                   FontSize="24" 
                   HorizontalAlignment="Center" 
                   Margin="10" 
                   VerticalAlignment="Top"/>

        <StackPanel VerticalAlignment="Center" HorizontalAlignment="Center">
            <Button Content="Переводчик" Click="OpenZadanie1_Click" Width="200" Height="50" Margin="5"/>
            <Button Content="Калькулятор" Click="OpenZadanie2_Click" Width="200" Height="50" Margin="5"/>
            <Button Content="Определение промежутка" Click="OpenZadanie3_Click" Width="200" Height="50" Margin="5"/>
            <Button Content="Тайное сообщение" Click="OpenZadanie4_Click" Width="200" Height="50" Margin="5"/>
        </StackPanel>
    </Grid>
</Window>
