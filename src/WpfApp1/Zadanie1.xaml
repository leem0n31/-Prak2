<Window x:Class="WpfApp1.Zadanie1"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation" 
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml" 
        Title="Переводчик" Height="200" Width="300" Background="#FF8A8A8A">
    <StackPanel>
        <Label Content="Введите слово на русском:" Margin="10"/>
        <TextBox Name="InputWord" Margin="10"/>
        <Button Content="Перевести" Click="TranslateWord" Margin="10"/>
        <TextBlock Name="OutputTranslation" Margin="10"/>
    </StackPanel>
</Window>