<Window x:Class="WpfApp1.Zadanie3"
xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation" 
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml" 
        Title="Проверка диапазона" Height="200" Width="300" Background="#FF929292">
    <StackPanel>
        <Label Content="Введите число от 0 до 100:" Margin="10"/>
        <TextBox Name="InputNumber" Margin="10"/>

        <Button Content="Проверить диапазон" Click="CheckRange" Margin="10"/>
        <TextBlock Name="RangeResult" Margin="10"/>
    </StackPanel>
</Window>
