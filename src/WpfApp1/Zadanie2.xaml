<Window x:Class="WpfApp1.Zadanie2"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation" 
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml" 
        Title="Калькулятор" Height="400" Width="300" Background="#FF9A9A9A">
    <StackPanel>
        <Label Content="Первый операнд:" Margin="10"/>
        <TextBox Name="Operand1" Margin="10"/>

        <Label Content="Второй операнд:" Margin="10"/>
        <TextBox Name="Operand2" Margin="10"/>

        <Label Content="Знак операции (+, -, *, /):" Margin="10"/>
        <TextBox Name="Sign" Margin="10"/>

        <Button Content="Вычислить" Click="Calculate" Margin="10"/>
        <TextBlock Name="CalculationResult" Margin="10"/>
    </StackPanel>
</Window>