<Window x:Class="WpfApp1.Zadanie4"
 xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation" 
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml" 
        Title="Проверка пароля" Height="200" Width="400" Background="#FF949494">
    <StackPanel>
        <Label Content="Введите пароль:" Margin="10"/>
        <TextBox Name="PasswordInput" Margin="10"/>

        <Button Content="Подтвердить" Click="CheckPassword" Margin="10"/>
        <TextBlock Name="PasswordResult" Margin="10"/>
    </StackPanel>
</Window>
